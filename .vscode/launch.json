{
	"configurations": [
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch",
			"url": "http://localhost:4895",
			"webRoot": "${workspaceFolder}",
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "start:portfolio"
		},
		{
			"name": "Current TS File",
			"type": "pwa-node",
			"request": "launch",
			"sourceMaps": true,
			"smartStep": true,
			"args": ["${relativeFile}"],
			"runtimeArgs": ["-r", "ts-node/register", "-r", "tsconfig-paths/register"],
			"cwd": "${workspaceRoot}",
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}
